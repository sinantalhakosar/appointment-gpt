{
  "compilerOptions": {
    "module": "commonjs",
    "esModuleInterop": true,
    "target": "es6",
    "noImplicitAny": true,
    "moduleResolution": "node",
    "sourceMap": true,
    "outDir": "build",                          
    "rootDir": "src",
    "baseUrl": "./src",
    "paths":{
      "~/*":[
         "./src/*"
      ]
   }
  },
  "include": ["src/**/*"]
}
